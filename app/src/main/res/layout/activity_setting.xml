<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/temaBackground"
    tools:context=".ui.activity.SettingActivity">


  <com.google.android.material.appbar.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:theme="@style/CardView.Light"
      tools:ignore="MissingConstraints" />

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="@color/lightBlue"
      app:popupTheme="@color/white"
      app:title="Pengaturan"
      tools:ignore="MissingConstraints" />

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:padding="12dp"
      app:layout_constraintTop_toBottomOf="@id/toolbar"
      tools:ignore="MissingConstraints"
      android:id="@+id/user_account_line">

    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:background="@drawable/ic_account"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_user_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Akun Saya"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/account_arrow"
        app:layout_constraintStart_toEndOf="@+id/user_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/account_arrow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/ic_arrow"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>

  <!-- Divider -->
  <View
      android:id="@+id/divider1"
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:background="@android:color/darker_gray"
      app:layout_constraintTop_toBottomOf="@id/user_account_line"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:padding="12dp"
      app:layout_constraintTop_toBottomOf="@id/divider1"
      tools:ignore="MissingConstraints"
      android:id="@+id/about_us_line">

    <ImageView
        android:id="@+id/about_us_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_about_us"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_about_us"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Tentang Kami"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/about_us_arrow"
        app:layout_constraintStart_toEndOf="@+id/about_us_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/about_us_arrow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:background="@drawable/ic_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

  </androidx.constraintlayout.widget.ConstraintLayout>


  <View
      android:id="@+id/divider2"
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:background="@android:color/darker_gray"
      app:layout_constraintTop_toBottomOf="@id/about_us_line"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:padding="12dp"
      app:layout_constraintTop_toBottomOf="@id/divider2"
      tools:ignore="MissingConstraints"
      android:id="@+id/achievement_line">

    <ImageView
        android:id="@+id/achievement_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_achievement"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/achievement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Penghargaan"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/achievement_arrow"
        app:layout_constraintStart_toEndOf="@+id/achievement_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/achievement_arrow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:background="@drawable/ic_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

  </androidx.constraintlayout.widget.ConstraintLayout>

  <!-- Another Divider -->
  <View
      android:id="@+id/divider3"
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:background="@android:color/darker_gray"
      app:layout_constraintTop_toBottomOf="@id/achievement_line"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:padding="12dp"
      app:layout_constraintTop_toBottomOf="@id/divider3"
      tools:ignore="MissingConstraints"
      android:id="@+id/logout_line">

    <ImageView
        android:id="@+id/logout_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_logout"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detail_about_us"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Keluar"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/logout_arrow"
        app:layout_constraintStart_toEndOf="@+id/logout_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logout_arrow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:background="@drawable/ic_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
