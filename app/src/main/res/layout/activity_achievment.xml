<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.AchievementActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textAlignment="center"
        style="@style/activityHeader"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/TextHeading2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peringkat"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/img_ranking"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="32dp"
        android:foregroundGravity="center"
        android:scaleX="1.8"
        android:scaleY="1.8"
        android:src="@drawable/ic_rank_diamond"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_header" />

    <TextView
        android:id="@+id/tv_level_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:hint="Silver"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_ranking" />

    <TextView
        android:id="@+id/tv_next_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Level berikutnya"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_level_name" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_next_level">

        <ImageView
            android:id="@+id/img_current_rank"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_rank_diamond" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/rankProgressBar"
            style="@style/progressBar"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:progress="20"
            android:scaleY="3" />

        <ImageView
            android:id="@+id/img_next_rank"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/diamond_rank" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/mission_line"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textAlignment="center"
        android:background="@color/lightBlue"
        android:backgroundTint="@color/lightBlue"
        app:layout_constraintTop_toBottomOf="@id/linear_layout">

        <TextView
            style="@style/TextHeading2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Misi"
            android:textSize="20sp" />

    </RelativeLayout>

