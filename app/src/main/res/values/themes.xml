<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ABAI" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/lightBlue</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorTertiaryContainer">@color/creamyYellow</item>
        <item name="colorPrimaryContainer">@color/lightBlue</item>
        <item name="colorSecondaryContainer">@color/gray_misty</item>

        <item name="android:colorBackground">@color/creamyYellow</item>

    </style>

    <style name="Theme.ABAI" parent="Base.Theme.ABAI" />

    <style name="tabLayout">
        <item name="tabBackground">@color/creamyYellow</item>
        <item name="tabIndicator">@drawable/tab_background_shape</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">fill</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="android:background">@color/creamyYellow</item>
    </style>
    

    <style name="progressBar">
        <item name="colorPrimary">@color/lightBlue</item>
        <item name="android:indeterminateTint">@color/lightBlue</item>
        <item name="colorPrimaryContainer">@color/gray_misty</item>
    </style>


    <style name="cardView">
        <item name="android:background">@color/creamyYellow</item>
        <item name="colorPrimary">@color/lightBlue</item>
        <item name="backgroundTint">@color/creamyYellow</item>
    </style>


    <style name="temaBackground">
        <item name="android:background">@color/creamyYellow</item>
    </style>

    <style name="TextHeading1">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextHeading2">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btnColor">
        <item name="colorPrimary">@color/lightBlue</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="appBar">
        <item name="android:background">@color/creamyYellow</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>
</resources>
